{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./*"]
      },
      "types": ["@nuxt/types"] 
    },
    "include": [
      "nuxt.config.ts",
      "plugins/**/*.ts",
      "components/**/*.vue",
      "layouts/**/*.vue",  ]
  }
  
